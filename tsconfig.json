{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "pretty": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "ESNext"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
